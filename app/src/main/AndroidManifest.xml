<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.msccs.hku.familycaregiver">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.SignedInActivity" />
        <activity
            android:name=".Activity.NewGroupActivity"
            android:label="@string/title_activity_new_group"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activity.InviteGroupMemberActivityForNewGp" />
        <activity android:name=".Activity.AuthUIActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.GroupDetailActivity" />
        <activity android:name=".Activity.InviteGpMemberForExistingGpActivity" />
        <activity
            android:name=".Activity.CreateNewTaskActivity"
            android:label="@string/title_activity_create_new_task"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activity.TaskDetailActivity"></activity>
        <activity android:name=".Activity.CalendarActivity"/>
        <activity android:name=".Activity.DayViewActivity"/>
        <activity android:name=".Activity.CreateNewPollingActivity"></activity>
        <activity android:name=".Activity.PollingDetailActivity"></activity>
        <activity android:name=".Activity.PollingResultActivity"></activity>
        <activity android:name=".Activity.VoterListActivity"></activity>

        <!-- [START firebase_service] -->
        <service
            android:name=".Services.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <!-- [END firebase_service] -->
        <!-- [START firebase_iid_service] -->
        <service
            android:name=".Services.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>