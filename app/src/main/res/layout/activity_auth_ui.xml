<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.msccs.hku.familycaregiver.Activity.AuthUIActivity"
    android:background="@drawable/senior">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/appname"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:elevation="4dp"
        android:background="@drawable/round_rect_orange_shape"
        android:id="@+id/signIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Getting start"
        android:textSize="15sp"
        android:padding="10dp"
        />

</LinearLayout>
